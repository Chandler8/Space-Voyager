{{!-- Build out Solar API info here --}}
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    {{#each bodies}}
    {{#if active}}
    <div class="carousel-item active">
      {{/if}}
      {{#unless active}}
      <div class="carousel-item">
        {{/unless}}
        <img class="d-block rounded w-100" src={{image_url}} alt="Planets" />
        <div class="carousel-caption d-none d-md-block">
          <h1>{{englishName}}</h1>
          <h3>Moons: {{moons.length}}</h3>
          <h3>Gravity: {{gravity}}</h3>


        </div>
      </div>
      {{/each}}
      <div class="carousel-item">
        <img class="d-block rounded w-100" src="/images/moon.jpg" alt="The Moon" />
        <div class="carousel-caption d-none d-md-block">
          <h2>The Moon</h2>
        </div>
      </div>

      <div class="carousel-item">
        <img class="d-block rounded w-100" src="/images/sun.jpg" alt="The Sun" />
        <div class="carousel-caption d-none d-md-block">
          <h2>The Sun</h2>
        </div>
      </div>
    </div>
    <div class="carousel-item">
        <img class="d-block rounded w-100" src="/images/pluto.jpg" alt="Pluto" />
        <div class="carousel-caption d-none d-md-block">
          <h2>Pluto</h2>
        </div>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

