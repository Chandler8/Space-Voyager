{{!-- This will be our container, and styling below will follow --}}

<div class="jumbotron">
  <h1 class="display-2 text-center">Solar System</h1>
</div>

<hr style="border-width: 2px;">

{{!-- Build out APOTD API info here --}}
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    {{#each id}}
    {{#if uranus}}
    <div class="carousel-item">
      <img class="d-block rounded mx-auto" src="/public/images/earth.gif" alt="First slide">
      <h2> {{this.englishName}} </h2>
      {{/if}}
      {{/each}}
    </div>
    <div class="carousel-item">
      <img class="d-block rounded mx-auto" src="/mars.gif" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block rounded mx-auto" src="/sun-4.gif" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<footer>
  <div class="bg-dark">
    <div class="text-center text-light">Data provided courtesy of NASA</div>
  </div>
</footer>