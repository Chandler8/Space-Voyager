{{!-- This will be our container, and styling below will follow --}}


{{!-- Build out APOTD API info here --}}
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    {{#each bodies}}
      {{#if active}}
      <div class="carousel-item active">
      {{/if}}
      {{#unless active}}
      <div class="carousel-item">
      {{/unless}}
        <img class="d-block rounded w-100" src={{image_url}} alt="Mars"/>
        <div class="carousel-caption d-none d-md-block">
          <h2>{{englishName}}</h2>
          <h3>Moons: {{moons.length}}</h3>
          <h3>Gravity: {{gravity}}</h3>

          
        </div>
      </div>
    {{/each}}

  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


<footer>
  <div class="bg-dark">
    <div class="text-center text-light">Data provided courtesy of NASA</div>
  </div>
</footer>